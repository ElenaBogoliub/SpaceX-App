<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="@dimen/common_horizontal_margin"
    android:padding="@dimen/common_horizontal_margin"
    app:cardBackgroundColor="@color/next_launch_cardview_background"
    app:cardCornerRadius="@dimen/common_card_corner_radius"
    app:cardElevation="6dp"
    app:contentPadding="@dimen/common_horizontal_margin"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        style="@style/TextAppearance.Spacex.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:alpha="0.6"
        android:text="@string/next_launch_rocket_lbl"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rocket"
        style="@style/TextAppearance.Spacex.Headline5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/next_launch_rocket_lbl"
        android:textColor="?attr/colorSecondary" />

</androidx.cardview.widget.CardView>