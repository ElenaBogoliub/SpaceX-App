<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Spacex.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="android:background">@color/dark_blue_3</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Spacex.BottomNavigation</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Widget.App.EmptyView" parent="">
        <item name="android:text">@string/common_message_load_failed</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="buttonText">@string/common_button_try_again</item>
        <item name="buttonTextAppearance">
            @style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored
        </item>
        <item name="showButton">true</item>
    </style>

</resources>